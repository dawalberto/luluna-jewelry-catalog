---
import Layout from "../layouts/Layout.astro"
import { Footer } from "../components/common"
import HeaderSimple from "../components/common/HeaderSimple"
import { CatalogApp } from "../components/catalog"
import { defaultLocale } from "../i18n/config"

const locale = defaultLocale
const title = locale === "es" ? "Catálogo" : "Catalog"
const description =
  locale === "es"
    ? "Explora nuestra colección de joyería artesanal"
    : "Explore our handcrafted jewelry collection"
---

<Layout title={title} description={description} lang={locale}>
  <HeaderSimple client:only="react" />
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4">
      <CatalogApp client:load initialLocale={locale} />
    </div>
  </main>

  <Footer client:load />
</Layout>
