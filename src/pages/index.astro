---
import Layout from "../layouts/Layout.astro"
import { Footer } from "../components/common"
import HeaderSimple from "../components/common/HeaderSimple"
import { defaultLocale } from "../i18n/config"

const locale = defaultLocale
const title = locale === "es" ? "Inicio" : "Home"
const description =
  locale === "es"
    ? "LuLuna - Joyería artesanal única y elegante"
    : "LuLuna - Unique and elegant handcrafted jewelry"
---

<Layout title={title} description={description} lang={locale}>
  <HeaderSimple client:load locale={locale} />

  <main>
    {/* Hero Section */}
    <section class="bg-gradient-to-br from-[#F9E5E5] via-[#E5F9F0] to-[#F0E5F9] py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">LuLuna Jewelry</h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-2xl mx-auto">
          {
            locale === "es"
              ? "Joyería artesanal única y elegante, hecha con amor y dedicación"
              : "Unique and elegant handcrafted jewelry, made with love and dedication"
          }
        </p>
        <a
          href="/catalog"
          class="inline-block bg-[#2E6A77] text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-[#245560] transition-colors shadow-lg hover:shadow-xl"
        >
          {locale === "es" ? "Ver Catálogo" : "View Catalog"}
        </a>
      </div>
    </section>

    {/* Featured Section */}
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-12">
          {locale === "es" ? "¿Por qué LuLuna?" : "Why LuLuna?"}
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center p-6">
            <div
              class="w-16 h-16 bg-[#F9E5E5] rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-[#2E6A77]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">
              {locale === "es" ? "Diseños Únicos" : "Unique Designs"}
            </h3>
            <p class="text-gray-600">
              {
                locale === "es"
                  ? "Cada pieza es única y está diseñada con pasión"
                  : "Each piece is unique and designed with passion"
              }
            </p>
          </div>

          <div class="text-center p-6">
            <div
              class="w-16 h-16 bg-[#E5F9F0] rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-[#2E6A77]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">
              {locale === "es" ? "Hecho a Mano" : "Handcrafted"}
            </h3>
            <p class="text-gray-600">
              {
                locale === "es"
                  ? "Elaborado artesanalmente con atención al detalle"
                  : "Crafted by hand with attention to detail"
              }
            </p>
          </div>

          <div class="text-center p-6">
            <div
              class="w-16 h-16 bg-[#F0E5F9] rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-[#2E6A77]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">
              {locale === "es" ? "Con Amor" : "With Love"}
            </h3>
            <p class="text-gray-600">
              {
                locale === "es"
                  ? "Creado con dedicación y cariño en cada detalle"
                  : "Created with dedication and care in every detail"
              }
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>
