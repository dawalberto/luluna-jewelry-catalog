rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Products collection
    match /products/{productId} {
      // Allow public read access (for testing - TODO: restrict later)
      allow read: if true;
      
      // Only admins can create, update, or delete products
      allow create, update, delete: if isAdmin();
    }

    // Categories collection
    match /categories/{categoryId} {
      // Public read so catalog can render filters
      allow read: if true;

      // Only admins can manage categories
      allow create, update, delete: if isAdmin();
    }

    // Tags collection
    match /tags/{tagId} {
      // Public read so catalog can render filters and product details
      allow read: if true;

      // Only admins can manage tags
      allow create, update, delete: if isAdmin();
    }

    // Collections collection
    match /collections/{collectionId} {
      // Public read so catalog can render filters and product details
      allow read: if true;

      // Only admins can manage collections
      allow create, update, delete: if isAdmin();
    }

    // Shippings collection
    match /shippings/{shippingId} {
      // Public read so product details can display shipping options
      allow read: if true;

      // Only admins can manage shipping options
      allow create, update, delete: if isAdmin();
    }

    // Payment methods collection
    match /paymentMethods/{paymentMethodId} {
      // Public read so product details can display payment methods
      allow read: if true;

      // Only admins can manage payment methods
      allow create, update, delete: if isAdmin();
    }

    // Admin role documents: admins/{uid}
    match /admins/{uid} {
      // Allow a signed-in user to read ONLY their own role document
      allow get: if isSignedIn() && request.auth.uid == uid;
      allow list: if false;

      // Role management is intentionally locked down (bootstrap via Firebase Console/Admin SDK)
      allow create, update, delete: if false;
    }

    // App settings (public read where needed; admin-only writes)
    match /settings/{docId} {
      // Allow the catalog to read pricing, global discount, and site content config
      allow read: if docId == 'pricing' || docId == 'discount' || docId == 'siteContent';
      allow create, update, delete: if isAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
